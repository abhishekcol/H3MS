<%- model_class = Shift -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:shiftname) %></th>
      <th><%= model_class.human_attribute_name(:short_code) %></th>
      <th><%= model_class.human_attribute_name(:color_code) %></th>
      <th><%= model_class.human_attribute_name(:shift_start_time) %></th>
      <th><%= model_class.human_attribute_name(:shift_end_time) %></th>
      <th><%= model_class.human_attribute_name(:meal_start_time) %></th>
      <th><%= model_class.human_attribute_name(:meal_end_time) %></th>
      <!-- <th><%= model_class.human_attribute_name(:created_at) %></th> -->
      <th colspan="2"><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @shifts.each do |shift| %>
      <tr>
        <td><%= link_to shift.id, shift_path(shift) %></td>
        <td><%= link_to shift.shiftname, shift_path(shift) %></td>
        <td><%= shift.shortcode %></td>
        <td style="background: <%= shift.colorcode %>"><%shift.colorcode %></td>
        <td><%= shift.shiftstarttime.strftime('%H:%M') %></td>
        <td><%= shift.shiftendtime.strftime('%H:%M') %></td>
        <td><%= shift.mealstarttime.strftime('%H:%M') %></td>
        <td><%= shift.mealendtime.strftime('%H:%M') %></td>
        <!-- <td><%=l shift.created_at %></td> -->
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_shift_path(shift), :class => 'btn btn-mini' %></td>
         <td> <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      shift_path(shift),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_shift_path,
            :class => 'btn btn-primary' %>
