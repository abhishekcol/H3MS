<%- model_class = Shift -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:shiftname) %>:</strong></dt>
  <dd><%= @shift.shiftname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:shortcode) %>:</strong></dt>
  <dd><%= @shift.shortcode %></dd>
  <dt><strong><%= model_class.human_attribute_name(:colorcode) %>:</strong></dt>
  <dd style=" color:<%= @shift.colorcode %>;  width:80px;background:<%= @shift.colorcode %>"><%= @shift.colorcode %></dd>
  <dt><strong><%= model_class.human_attribute_name(:shift_time) %>:</strong></dt>
  <dd><%= @shift.shiftstarttime.strftime('%H:%M') %> - <%= @shift.shiftendtime.strftime('%H:%M') %></dd>
  <dt><strong><%= model_class.human_attribute_name(:meal_time) %>:</strong></dt>
  <dd><%= @shift.mealstarttime.strftime('%H:%M') %> -  <%= @shift.mealendtime.strftime('%H:%M') %></dd>
 
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              shifts_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_shift_path(@shift), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              shift_path(@shift),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
